<h1>Chat Room Dawgs in the Hizzee</h1>
<div id='messages'>
  <%= render @messages %>
</div>

<div id='messages2'>
  <%= render @messages %>
</div>

<div id='player1'>
  <form id='player1-submit'>
    <label>Chat hur:</label><br>
    <textarea onkeydown="if(event.keyCode===9){var v=this.value,s=this.selectionStart,e=this.selectionEnd;this.value=v.substring(0, s)+'\t'+v.substring(e);this.selectionStart=this.selectionEnd=s+1;return false;}"></textarea>
    <input data-behavior='room_speaker' type='submit' value='submit'>
  </form>
</div>

